extend __core__/default
block content
	+panel().light
		x-seg(of="5").md-half.sm-stack
			x-major
				h1 First One
				p
					+blockletter(45)
				p
					+modal('Learn More')
						h3 Learn More
						p
							+blockletter(50)
						form#moreInfo.wrap
							x-seg(of="2")
								x-cell
									+input('First Name', 'required')
								x-cell
									+input('Last Name')
							+email('Email', 'required')
							+textarea('Message')
							+submit('Submit','right')
			x-minor
				+slideshow(380,235,'right')
	+panel().dark
		x-seg(of="4").md-half.tablet-stack
			+loop(4)
				x-cell
					+porthole(120,'center')
					p.center-align
						+blockletter(15)
	+panel().light
		x-seg(of="3").md-half.sm-stack
			x-minor
				+image('100%',180).dimage
			x-major
				h2 Next Product
				p
					+blockletter(40)
				+modal('Another Modal', 'right')
					h3 Another Modal
					p
						+blockletter(800)
	+panel().dark.footer
		+tabs(['First','Second','Third'])
			+tab()
				h3 First Tab
				p
					+blockletter(45)
			+tab()
				h3 Second Tab
				ol
					- var i = 0;
					+loop(4)
						li= titles[i++] + " Item"
			+tab()
				h3 Third Tab
				x-seg(of="5").sm-stack
					+loop(5)
						x-cell
							+image('100%',100).dimage
							p
								+rating(3, 5)
block script
	script.
		$('form').each(function() {
			console.log($(this).attr('id'));
			magicVial('form#' + $(this).attr('id'), "Sorry, please fix the errors below.");
		});
